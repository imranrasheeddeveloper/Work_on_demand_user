                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/totalCard"
                    android:background="@drawable/round_bg"
                    style="@style/blueButtonStyle"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/btnPayNow"
                    android:text="Book Now,Pay Later"
                    android:id="@+id/btnPayLater"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/btnPayLater"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/round_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/totalCard"
                    style="@style/greenButtonStyle"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:text="$ 30"
                    android:id="@+id/btnPayNow"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>