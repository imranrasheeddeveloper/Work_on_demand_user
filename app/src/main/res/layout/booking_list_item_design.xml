<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#F7F7F7"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="9dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="Active"
            android:gravity="center"
            android:fontFamily="@font/poppin_regular"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/booking_status_tag"
            android:id="@+id/booking_status"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/booking_status"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Booking"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/booking"/>

            <View
                android:layout_width="@dimen/_20sdp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/booking"
                app:layout_constraintStart_toStartOf="@id/booking"
                android:background="@color/primary"
                android:id="@+id/view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking"
                android:text="#132"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/booking_token"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="@id/view"
                android:text="Deep Clean"
                android:textSize="14sp"
                android:fontFamily="@font/poppin_regular"
                android:textColor="@color/black"
                android:id="@+id/booking_service_title"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/booking_service_title"
                app:layout_constraintStart_toStartOf="@id/booking_service_title"
                android:text="2x Extras Inside Fridge"
                android:textSize="12sp"
                android:fontFamily="@font/poppin_regular"
                android:textColor="#404040"
                android:alpha="0.5"
                android:layout_marginTop="5dp"
                android:id="@+id/extras"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/extras"
                app:layout_constraintStart_toStartOf="@id/extras"
                android:text="1x Oven "
                android:textSize="12sp"
                android:fontFamily="@font/poppin_regular"
                android:textColor="#404040"
                android:alpha="0.5"
                android:id="@+id/extras1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/extras1"
                app:layout_constraintStart_toStartOf="@id/extras1"
                android:text="2x Glaseed "
                android:textSize="12sp"
                android:fontFamily="@font/poppin_regular"
                android:textColor="#404040"
                android:alpha="0.5"
                android:id="@+id/extras2"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/extras2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-30dp"
                android:layout_marginEnd="-30dp"
                android:id="@+id/break_line"/>

            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/cancel_booking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_back"
                android:padding="10dp"
                android:gravity="center"
                android:fontFamily="@font/poppin_regular"
                android:textSize="14sp"
                app:button_duration="250"
                app:button_scale="0.94"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/reschedule_booking"
                app:layout_constraintTop_toBottomOf="@id/break_line"
                android:text="Cancel Booking"/>


            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/reschedule_booking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cancel_booking"
                app:layout_constraintTop_toBottomOf="@id/break_line"
                android:text="Reschedule"
                app:button_duration="250"
                app:button_scale="0.94"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/outline_back"
                android:padding="10dp"
                android:gravity="center"
                android:fontFamily="@font/poppin_regular"
                android:textSize="14sp"
                android:textColor="@color/blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cancel_booking"
                android:text="12/2/2022"
                android:layout_marginTop="10dp"
                android:alpha="0.9"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#404040"
                android:fontFamily="@font/poppin_regular"
                android:id="@+id/booking_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reschedule_booking"
                android:text="05:45"
                android:layout_marginTop="10dp"
                android:alpha="0.9"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#404040"
                android:fontFamily="@font/poppin_regular"
                android:id="@+id/booking_time"/>

        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>