<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:padding="@dimen/_8sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_inbox"
        android:layout_width="60dp"
        android:layout_height="60sp"
        android:background="@color/transparent"
        android:src="@color/gray"
        app:civ_border_color="@color/off_white"
        app:civ_border_width="0.3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_inbox"
        app:layout_constraintTop_toTopOf="@id/iv_inbox"
        style="@style/mediumText"
        android:text="Name Here"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:id="@+id/inbox_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_inbox"
        app:layout_constraintTop_toBottomOf="@id/inbox_name"
        style="@style/normalText"
        android:textColor="@color/light_gray"
        android:text="This is the last message."
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/last_message"/>



</androidx.constraintlayout.widget.ConstraintLayout>