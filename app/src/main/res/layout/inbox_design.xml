<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_sp"
        android:layout_width="60dp"
        android:layout_height="60sp"
        android:background="@color/transparent"
        android:src="@color/gray"
        app:civ_border_color="@color/off_white"
        app:civ_border_width="0.3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_sp"
        app:layout_constraintTop_toTopOf="@id/iv_sp"
        style="@style/mediumText"
        android:text="Name Here"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:id="@+id/i_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_sp"
        app:layout_constraintTop_toBottomOf="@id/i_name"
        style="@style/normalText"
        android:textColor="@color/light_gray"
        android:text="This is the last message."
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/message"/>

    <TextView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/normalText"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/rating_bg1"
        android:backgroundTint="@color/primary"
        android:text="10"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>