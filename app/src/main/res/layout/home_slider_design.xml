<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg">

    <ImageView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_sliderr"
        android:id="@+id/illustrator"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/illustrator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/mediumText1"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/_8sdp"
        android:padding="@dimen/_2sdp"
        android:text="Fix the Broken Stuff by Asking for he Technicians."
        android:textColor="#3d2d1c"
        android:id="@+id/slider_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"
        app:layout_constraintStart_toStartOf="@id/slider_title"
        app:layout_constraintTop_toBottomOf="@id/slider_title"
        android:backgroundTint="#f4841f"
        android:paddingStart="@dimen/_18sdp"
        android:paddingEnd="@dimen/_18sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Repair"
        style="@style/normalText"
        android:textColor="#fef4ea"/>

</androidx.constraintlayout.widget.ConstraintLayout>