<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@drawable/rating_bg"
    android:padding="@dimen/_8sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/normalText"
        android:textSize="15sp"
        android:text="3 Months Plan"
        android:textStyle="bold"
        android:id="@+id/tv_month"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_month"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/mediumText"
        android:textSize="12sp"
        android:text="save $2 per order"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:id="@+id/tv_save"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_save"
        app:layout_constraintBottom_toBottomOf="@id/tv_save"
        app:layout_constraintStart_toEndOf="@id/tv_save"
        style="@style/normalText"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="12sp"
        android:text="(10% OFF)"
        android:textStyle="bold"
        android:id="@+id/tv_discount_percentage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/mediumText"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="$ 18/month"
        android:textStyle="bold"
        android:id="@+id/tv_monthly_discount_rate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_save"
        app:layout_constraintBottom_toBottomOf="@id/tv_save"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/mediumText"
        android:textSize="10sp"
        android:text="Avg. per order"
        android:textStyle="bold"
        android:id="@+id/tv_average"/>

</androidx.constraintlayout.widget.ConstraintLayout>