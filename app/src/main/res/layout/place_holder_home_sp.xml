<?xml version="1.0" encoding="utf-8"?>
<aglibs.loading.skeleton.layout.SkeletonConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_200sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <aglibs.loading.skeleton.layout.SkeletonConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp"
        >

        <aglibs.loading.skeleton.view.SkeletonImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_94sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_one"
            android:scaleType="centerCrop"
            android:id="@+id/sp_image"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sp_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_8sdp">


            <aglibs.loading.skeleton.view.SkeletonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Party Cleaning"
                style="@style/mediumText"
                android:textStyle="bold"
                android:textColor="@color/semi_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/sp_name"/>

            <aglibs.loading.skeleton.view.SkeletonTextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Post Party"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_name" />


            <aglibs.loading.skeleton.view.SkeletonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Start from"
                style="@style/mediumText"
                android:textColor="@color/hint_color"/>


            <aglibs.loading.skeleton.view.SkeletonTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="41.04$"
                style="@style/mediumText"
                android:textStyle="bold"
                android:id="@+id/startFrom"
                android:textColor="#e88a33"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </aglibs.loading.skeleton.layout.SkeletonConstraintLayout>

</aglibs.loading.skeleton.layout.SkeletonConstraintLayout>