<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RizorsiUmaniUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="headingText">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>


    <style name="normalText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppin_regular</item>
    </style>

    <style name="mediumText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="mediumText1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="normalLightText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/poppin_regular</item>
    </style>

    <style name="greenButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="blueButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="profile_text_appearance">

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="background">@drawable/ripple_bg_selector</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background"> @color/transparent</item>

    </style>


</resources>