<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RizorsiUmaniUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Hide title into CollapsingToolbarLayout -->
    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="headingText">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="boldHeadingText">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppin_regular</item>
    </style>

    <style name="time_slots_style">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="mediumText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tabText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="_14sp_regular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppin_regular</item>
    </style>

    <style name="mediumText1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="normalLightText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/poppin_regular</item>
    </style>

    <style name="greenButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/button_round_bg</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="disableButton">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/button_round_bg</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">#ffcd3c </item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/mediumText</item>
        <item name="selectableItemBackground">@drawable/rect_bg</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabRippleColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabBackground">@drawable/rect_bg</item>
    </style>

    <style name="lightGreenButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/button_round_bg</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="blueButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/button_round_bg</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="redButtonStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/button_round_bg</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="profile_text_appearance">

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="background">@drawable/ripple_bg_selector</item>

    </style>

    <style name="TeamPicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">false</item>
        <item name="vpv_maxVisibleItems">5</item>
        <item name="vpv_textColor">@color/black</item>
        <item name="vpv_textSize">14sp</item>
        <item name="vpv_textTypeface">@font/poppins_medium</item>
        <item name="vpv_divider">@color/gray</item>
        <item name="vpv_orientation">vertical</item>
    </style>


    <style name="DialogAnimations">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background"> @color/transparent</item>

    </style>


</resources>